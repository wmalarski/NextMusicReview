{
  "name": "next-music-review",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --config .prettierrc 'src/**/*.(ts|tsx)' --write",
    "lint": "eslint . --fix --ext .tsx,.ts",
    "codegen": "graphql-codegen --require dotenv/config --config codegen.yml dotenv_config_path=.env.local",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^0.16.1",
    "@chakra-ui/icons": "^1.0.4",
    "@chakra-ui/react": "^1.2.1",
    "@emotion/react": "^11.1.2",
    "@emotion/styled": "^11.0.0",
    "algoliasearch": "^4.8.4",
    "framer-motion": "^3.2.1",
    "lodash": "^4.17.20",
    "next": "^10.0.6",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-hook-form": "^6.14.2",
    "react-instantsearch-dom": "^6.8.3",
    "react-query": "^3.6.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@graphql-codegen/cli": "^1.20.1",
    "@graphql-codegen/typescript": "^1.20.2",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@graphql-codegen/typescript-react-query": "^1.1.0",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-instantsearch-dom": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  },
  "jest": {
    "automock": false,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/",
      "./__tests__/utils.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
